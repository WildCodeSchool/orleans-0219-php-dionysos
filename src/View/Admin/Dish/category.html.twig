{% extends 'layout-admin.html.twig' %}

{% block content %}
    <section class="list-categories">
        <h2>Gérez vos catégories de plats</h2>
        <div class="container-fluid">
            <div class="row">
                <table class="table table-hover table-dark">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Handle</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for review in reviews %}
                        <tr>
                            <td>{{ review.name }}</td>
                            <td>{{ review.date }}</td>
                            <td>{{ review.rating }}/5</td>
                            <td class=" text-left">{{ review.comment }}</td>
                            <td>
                                {{ (review.online == 1) ? 'Oui' : 'Non' }}
                            </td>
                            <td>
                                <form method="POST">
                                    <input id="id" name="online" type="hidden" value="{{ review.id }}">
                                    <button type="submit" class="btn btn-sm {{ (review.online != 1) ? 'btn-success' : 'btn-secondary' }}">{{ (review.online == 1) ? 'Mettre hors ligne' : 'Mettre en ligne' }}</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}