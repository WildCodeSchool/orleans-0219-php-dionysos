{% extends 'layout-visitor.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css">
{% endblock %}

{% block content %}
        <section class="guest-book text-center container-fluid">
            <h1>LIVRE D'OR</h1>
            <div class="row justify-content-center">
                <div class="col-6">
                    <form method="POST">
                        <input type="hidden" value="{{ item.id }}" id="id" name="id" >
                        <div class="form-group ">
                            <label for="name">Nom : *</label>
                            <input required class="form-control" type="text" value="{{ item.name }}" id="name" name="name"  placeholder="Votre nom">
                        </div>

                        <div class="form-group">
                            <label for="comment">Commentaire : *</label>
                            <textarea required class="form-control" name="comment" id="comment" placeholder="Votre commentaire" value="{{ item.comment }}" ></textarea>
                        </div>

                        <div class="form-group">
                        <label for="rating">Votre note : *</label>
                            <fieldset class="rating" value="{{ item.rating }}">
                                <input type="radio" id="star5" name="rating" value="5" /><label class = "full" for="star5" title="Awesome - 5 stars"></label>
                                <input type="radio" id="star4" name="rating" value="4" /><label class = "full" for="star4" title="Pretty good - 4 stars"></label>
                                <input type="radio" id="star3" name="rating" value="3" /><label class = "full" for="star3" title="Meh - 3 stars"></label>
                                <input type="radio" id="star2" name="rating" value="2" /><label class = "full" for="star2" title="Kinda bad - 2 stars"></label>
                                <input type="radio" id="star1" name="rating" value="1" /><label class = "full" for="star1" title="Sucks big time - 1 star"></label>
                            </fieldset>
                        </div>
                            <button type="submit" name="submit" value="submit" class="btn btn-lg btn-dark">Envoyer</button>
                    </form>
                </div>
            </div>
        </section>
<!-- nom et commentaire + note sur 5 -->

{% endblock %}